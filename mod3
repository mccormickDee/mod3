<script>

function myFunction() {
  let person = prompt("Please enter your name", "Harry Potter");
  if (person != null) {
    document.getElementById("demo").innerHTML =
    "Hello " + person + "! How are you today?";
  }
}
</script>
<script>

var myText = "";
let i=0;
do {
  myText += i +"<br>";
  i++;
}
while (i<10);


document.write(myText+"<br>");
</script>

<script>
let text = "";
const subject = ["Algebra", "Art", "Data Analytics", "Programming","Accounting"];
subject.forEach(myFunction);

document.getElementById("demo").innerHTML = text;

function myFunction(item, index) {
  text += index + ": " + item + "<br>";
}
</script>

